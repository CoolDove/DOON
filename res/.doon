keymap: default
{
    <C-s>: save_current_scene,
    <C-z>: undo,
    <C-S-z>: redo,
    <C-o>: open,
    <C-n>: new_scene,
}

keymap: brush
{
    <a>: brush_size_decrease,
    <s>: brush_size_increase,
}

brush: default
{
    texture: brush_circle,
    shader: brush_default,
    smooth: 1.0,
}

brush: square
{
    texture: brush_square,
    shader: brush_default,
    smooth: 0.45,
}

blendmode: default
{
    shader: blend_default
}

blendmode: add
{
    shader: blend_add
}
